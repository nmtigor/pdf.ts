{
  "compilerOptions": {
    "outDir": "gen",

    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable",
    ],
    "skipLibCheck": true,

    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "isolatedModules": true,

    "declaration": true,
    "declarationMap": true,
    "declarationDir": "gen",
    "allowJs": true,
    "checkJs": false,

    "sourceMap": true,

    "preprocessorFile": "src/global.ts",
    "appendJsImport": "ts",
    "allowTsImport": true,
  },

  "files": [
    "src/pdf/pdf.ts-web/viewer.ts",
    "src/pdf/pdf.ts-src/pdf.worker.ts",
    "src/pdf/pdf.ts-src/pdf.sandbox.ts",
    "src/pdf/pdf.ts-src/pdf.scripting.ts",

    "src/pdf/pdf.ts-src/core/xfa/formcalc_parser.ts"
  ],
  "include": [
    "src/3rd/quickjs/**/*"
  ]
}
